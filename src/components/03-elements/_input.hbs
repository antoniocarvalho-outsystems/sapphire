<style>
	.BlockContainer__Row {
    display: flex;
    margin: 30px 0;
  }

	.BlockContainer__Row div {
    width: 100%;
  }

  .BlockContainer__Row:not(.BlockContainer__Row--inlineItem) div {
    display: flex;
    flex-direction: column;
  }

  .BlockContainer__Row div:not(:last-child) {
    margin-right: 15px;
  }
</style>

<section class='BlockContainer'>
	{{! Text Inputs }}
	<div class='BlockContainer__Row'>
		<div>
			<label for='input1'>
				Regular Input
			</label>
			<input name='input1' type='text' />
		</div>
		<div>
			<label for='input2'>
				Mandatory Input
			</label>
			<input name='input2' type='text' class='Mandatory' />
		</div>
		<div>
			<label for='input3'>
				ReadOnly Input
			</label>
			<input name='input3' type='text' readonly='readonly' />
		</div>
		<div>
			<label for='input4'>
				Mandatory and ReadOnly Input
			</label>
			<input name='input4' type='text' class='Mandatory' readonly='readonly' />
		</div>
	</div>

	{{! Select Inputs }}
	<div class='BlockContainer__Row'>
		<div>
			<label for='dropdown1'>
				Regular Select
			</label>
			<select name='dropdown1' class='Dropdown'>
				<option value='1'>
					Option 1
				</option>
				<option value='2'>
					Option 2
				</option>
				<option value='3'>
					Option 3
				</option>
			</select>
		</div>
		<div>
			<label for='dropdown2'>
				Mandatory Select
			</label>
			<select name='dropdown2' class='Dropdown Mandatory'>
				<option value='1'>
					Option 1
				</option>
				<option value='2'>
					Option 2
				</option>
				<option value='3'>
					Option 3
				</option>
			</select>
		</div>
		<div>
			<label for='dropdown3'>
				ReadOnly Select
			</label>
			<select name='dropdown3' class='Dropdown' readonly='readonly'>
				<option value='1'>
					Option 1
				</option>
				<option value='2'>
					Option 2
				</option>
				<option value='3'>
					Option 3
				</option>
			</select>
		</div>
		<div>
			<label for='dropdown4'>
				Mandatory and ReadOnly Select
			</label>
			<select name='dropdown4' class='Dropdown Mandatory' readonly='readonly'>
				<option value='1'>
					Option 1
				</option>
				<option value='2'>
					Option 2
				</option>
				<option value='3'>
					Option 3
				</option>
			</select>
		</div>
	</div>

	{{! CheckBox Inputs }}
	<div class='BlockContainer__Row BlockContainer__Row--inlineItem'>
		<div>
			<label for='checkbox1'>
				Regular CheckBox
			</label>
			<input type='checkbox' name='checkbox1' />
		</div>
		<div class='CheckMandatory'>
			<label for='checkbox2'>
				Mandatory CheckBox
			</label>
			<input type='checkbox' name='checkbox2' />
		</div>
		<div>
			<label for='checkbox3'>
				ReadOnly CheckBox
			</label>
			<input
				type='checkbox'
				name='checkbox3'
				class='ReadOnly'
				disabled='disabled'
			/>
		</div>
		<div class='CheckMandatory'>
			<label for='checkbox4'>
				Mandatory and ReadOnly CheckBox
			</label>
			<input
				type='checkbox'
				name='checkbox4'
				class='ReadOnly'
				disabled='disabled'
			/>
		</div>
	</div>

	{{! Radio Inputs }}
	<div class='BlockContainer__Row BlockContainer__Row--inlineItem'>
		<div>
			<label for='radio1'>
				Regular Radio
			</label>
			<input type='radio' name='radio1' />
			<input type='radio' name='radio1' />
			<input type='radio' name='radio1' />
			<input type='radio' name='radio1' />
		</div>
		<div>
			<label for='radio1'>
				Disabled Radio
			</label>
			<input type='radio' name='radio2' class='ReadOnly' disabled='disabled' />
			<input type='radio' name='radio2' class='ReadOnly' disabled='disabled' />
			<input type='radio' name='radio2' class='ReadOnly' disabled='disabled' />
			<input type='radio' name='radio2' class='ReadOnly' disabled='disabled' />
		</div>
	</div>
</section>